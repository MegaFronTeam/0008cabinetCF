extends ../layout/main.pug

include ../blocks/header/_header.pug
include ../blocks/topLine/_topLine.pug
include ../blocks/top-nav/_top-nav.pug 
include ../blocks/headerBlock/_headerBlock.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sContent/_sContent.pug
 
include ../blocks/sContact/_sContact.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sForm/_sForm.pug
include ../blocks/sCabinetPanel/_sCabinetPanel.pug
include ../blocks/footer/_footer.pug
include ../blocks/sCreateProduct/_sCreateProduct.pug

block variables
	- let  mainPage= 'main-page' 
	- let  bg= null

block title
	- let  title= 'create-product-5'
	title= title
block pagecontent
	+aside('true')
	+main('Создать товар', '', 'true','Список товаров', 'hide', true)
		.title
			.h2 Создать товар
			.form-check.form-switch
				input#variant.form-check-input(type='checkbox' role='switch')
				label.form-check-label(for='variant') Вариативный товар
		+b.btns-slider-wrapper
			+b.btns-slider--js.swiper
				.swiper-wrapper
					-
						var list = ["Фотографии товара", "Вариации", "Опции", "Бейджи", "Наличие",'Характеристики','Сопутствующие','Дополнительно']
					+e.slide.swiper-slide
						+e.btn.btn.btn-outline-secondary.active(href="#") Основное
					each item in list
						+e.slide.swiper-slide
							+e.btn.btn.btn-outline-secondary(href="#")= item
			+arrow
		+sCreateProduct
			h3 Наличие
			+e.wrap
				mixin cInput(title)
					.form-wrap__input-wrap.form-wrap__input-wrap--custom.form-group
						if title
							span.form-wrap__input-title!= title 
						block
				+cInput('Самара')
					+e.custom-input-row.row
						.col-12
							.form-check.form-switch
								input#adress.form-check-input(type='checkbox' role='switch')
								label.form-check-label(for='adress') ул. Партизанская, д. 86
						.col-12: +in-c('checkbox', 'Показывать по дням недели', 'day')
						.col-auto: +in-c('checkbox', 'Пн', 'day')
						.col-auto: +in-c('checkbox', 'Вт', 'day')
						.col-auto: +in-c('checkbox', 'Ср', 'day')
						.col-auto: +in-c('checkbox', 'Чт', 'day')
						.col-auto: +in-c('checkbox', 'Пт', 'day')
						.col-auto: +in-c('checkbox', 'Сб', 'day')
						.col-auto: +in-c('checkbox', 'Вс', 'day')
						.col-12
							+in-c('checkbox', 'Управлять уровнем запасов (количеством)', 'day')
						.col-12
							+input('Количество в запасе, шт','text', ``)
				+cInput()
					+e.custom-input-row.row
						.col-12
							.form-check.form-switch
								input#adress2.form-check-input(type='checkbox' role='switch')
								label.form-check-label(for='adress2') ул. Ново-садовая, д. 166
						.col-12: +in-c('checkbox', 'Показывать по дням недели', 'checkbox2')
						.col-12: +in-c('checkbox', 'Управлять уровнем запасов (количеством)', 'checkbox2')
				+cInput('Тольятти')
					+e.custom-input-row.row
						.col-12
							.form-check.form-switch
								input#adress3.form-check-input(type='checkbox' role='switch')
								label.form-check-label(for='adress3') ул. Мира, д. 86
						.col-12: +in-c('checkbox', 'Показывать по дням недели', 'checkbox3')
						.col-12: +in-c('checkbox', 'Управлять уровнем запасов (количеством)', 'checkbox3')
				+cInput()
					+e.custom-input-row.row
						.col-12
							.form-check.form-switch
								input#adress4.form-check-input(type='checkbox' role='switch')
								label.form-check-label(for='adress4') ул. Карла Маркса, д. 86
						.col-12: +in-c('checkbox', 'Показывать по дням недели', 'checkbox4')
						.col-12: +in-c('checkbox', 'Управлять уровнем запасов (количеством)', 'checkbox4')
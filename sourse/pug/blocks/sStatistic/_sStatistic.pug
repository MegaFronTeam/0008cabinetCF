							+e.body
								+e.text-with-img
									+img("img/slightly-smiling-face_1f642.png")
									+e.text-lg 2665
							+e.footer.row
								.col-sm-4.col-auto.small
									.strong.up 9
									|  за сегодня
								.col-sm-4.col-auto.small
									.strong.up 160
									| за неделю
